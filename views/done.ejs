<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Done</title>
    <style>
        body {
            height: 100%;
            margin: 0;
            display: flex;
            font-family: "Arial", sans-serif;
            background-color: #ffebd6;
            justify-content: center;
            align-items: center;
        }    
        
        .container {
            background-color: #ffeab6;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgb(50, 50, 50);
            width: 90%;
            max-width: 500px;
            text-align: center;
            padding: 40px;
        }

        h1 {
            font-size: 28px;
            color: orange;
            margin-bottom: 20px;
        }

        .download-link {
            display: inline-block;
            padding: 15px 25px;
            margin-top: 20px;
            background-color: #ff8a47;
            color: white;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .download-link:hover {
            background-color: #ff6a20;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>
            You have completed your conversion!
        </h1>
        <table>
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% Object.values(fileIds).forEach(function(file) { %>
                    <tr id="<%= file.id %>">
                        <td><a href="/upload/<%= file.id %>"> <%= file.originalname.split('.')[0] %>.pdf </a></td>
                        <td class="status"><%= file.status %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a id="fireLink" class="download-link">Download File</a>
    </div>
</body>
<script>
    const batchInterval = setInterval(() => {
        const statuses = document.getElementsByClassName('status');
        const pendingIds = [];
        const statusElements = {};
    
        for (let i = 0; i < statuses.length; i++) {
            if (statuses[i].innerText === 'pending...') {
                let id = statuses[i].parentElement.id;
                pendingIds.push(id);
                statusElements[id] = statuses[i];
            }
        }

        if (pendingIds.length === 0) {
            clearInterval(batchInterval);
        }

        fetch('/upload/statuses', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ ids: pendingIds })
        })
        .then(response => response.json())
        .then(datas => {
            console.log(datas);
            datas.forEach(data => {
                console.log(data);
                if (data.status === 'finished') {
                    statusElements[data.id].innerText = 'finished';
                }
            });
        })
        
    }, 2000);
</script>
</html>