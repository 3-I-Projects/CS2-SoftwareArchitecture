<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Done</title>
    <style>
        body {
            height: 100%;
            margin: 0;
            display: flex;
            font-family: "Arial", sans-serif;
            background-color: #ffebd6;
            justify-content: center;
            align-items: center;
        }    
        
        .container {
            background-color: #ffeab6;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgb(50, 50, 50);
            width: 90%;
            max-width: 500px;
            text-align: center;
            padding: 40px;
        }

        h1 {
            font-size: 28px;
            color: orange;
            margin-bottom: 20px;
        }

        .download-link {
            display: inline-block;
            padding: 15px 25px;
            margin-top: 20px;
            background-color: #ff8a47;
            color: white;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .download-link:hover {
            background-color: #ff6a20;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>
            You have completed your conversion!
        </h1>
        <table>
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% Object.values(fileIds).forEach(function(file) { %>
                    <tr id="<%= file.id %>">
                        <td><a href="/upload/<%= file.id %>"> <%= file.originalname.split('.')[0] %>.pdf </a></td>
                        <td class="status"><%= file.status %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a id="fireLink" class="download-link">Download File</a>
    </div>
</body>
<script>
    const statuses = document.getElementsByClassName("status");
    console.log(statuses);
    for (let i = 0; i < statuses.length; i++) {
        if (statuses[i].innerText === 'pending...') {
            let id = statuses[i].parentElement.id;
            console.log(id);
            const interval = setInterval(() => {
                fetch(`/upload/${id}/status`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.status === 'finished') {
                            console.log('data is', data);
                            statuses[i].innerText = 'finished';
                            clearInterval(interval);
                        }
                    })
                    .catch(error => console.error('Error:', error));
            }, 3000); // Poll every 1 seconds
        }
    }
</script>
</html>